{
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["./src/*", "tsup.config.ts"]
}
